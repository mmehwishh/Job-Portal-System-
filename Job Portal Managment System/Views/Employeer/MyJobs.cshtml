@model IEnumerable<Job_Portal_Managment_System.JOB>

@{
    ViewBag.Title = "My Jobs";
}

<h2>My Posted Jobs</h2>

<p>
    @Html.ActionLink("Post New Job", "PostJob", null, new { @class = "btn btn-success" })
</p>

@if (!Model.Any())
{
    <p>No jobs posted yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Job Title</th>
                <th>Location</th>
                <th>Posted Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                <tr>
                    <td>@job.job_title</td>
                    <td>@job.location</td>
                    <td>@job.posted_date?.ToString("dd MMM yyyy")</td>
                    <td>
                        @Html.ActionLink("Edit", "EditJob", new { id = job.job_id }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("View Applicants", "Applicants", new { jobId = job.job_id }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "DeleteJob", new { id = job.job_id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

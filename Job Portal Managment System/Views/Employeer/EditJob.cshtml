@model Job_Portal_Managment_System.JOB

@{
    ViewBag.Title = "Edit Job";
}

<h2>Edit Job</h2>

@using (Html.BeginForm("EditJob", "Employeer", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.job_id)

        <div class="form-group">
            @Html.LabelFor(m => m.job_title, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.job_title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.job_title, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.job_description)
            @Html.TextAreaFor(m => m.job_description, new { @class = "form-control", rows = 5 })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.location)
            @Html.TextBoxFor(m => m.location, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.salary)
            @Html.TextBoxFor(m => m.salary, new { @class = "form-control" })
        </div>

        <input type="submit" value="Update Job" class="btn btn-success" />
        @Html.ActionLink("Back to My Jobs", "MyJobs", null, new { @class = "btn btn-secondary" })
    </div>
}

                @Html.DropDownList("job_id", String.Empty)
                @Html.ValidationMessageFor(model => model.job_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.seeker_id, "seeker_id", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("seeker_id", String.Empty)
                @Html.ValidationMessageFor(model => model.seeker_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.applied_date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.applied_date)
                @Html.ValidationMessageFor(model => model.applied_date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.status, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.status)
                @Html.ValidationMessageFor(model => model.status)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@model Job_Portal_Managment_System.APPLICATION

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>APPLICATION</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.application_id)

        <div class="form-group">
            @Html.LabelFor(model => model.job_id, "job_id", new { @class = "control-label col-md-2" })
